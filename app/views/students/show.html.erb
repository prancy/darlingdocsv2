<h1>This is <%= @student.name %>'s Progress </h1>

<p>
  <strong>Name: </strong>
  <%= @student.name %>
</p>
<p>
  <strong>Age: </strong>
  <%= @student.age %>
</p>
<p>
  <strong>Gender: </strong>
  <%= @student.gender %>
</p>


<%= link_to "Return", student_path %> 

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Participation</th>
      <th>Behavior</th>
      <th>Homework</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @student.reports.each do |report| %>
      <tr>
        <td><%= report.created_at %></td>
        <td><%= report.participation %></td>
        <td><%= report.behavior %></td>
        <td><%= report.homework %></td>
        <td>
          <%= link_to "Delete this report", report_path(report.id), method: :delete, data: { confirm: "Are you sure you want to delete this report?"} %>
          <br>
          <%= link_to "Edit this report", edit_report_path(report.id) %>
        </td>
      </tr>
    
    <% end %>
    <%= link_to '<button class="button">Add a Report</button>'.html_safe, new_student_report_path(@student) %>
  </tbody>
</table>
